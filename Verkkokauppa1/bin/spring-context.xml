<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                   http://www.springframework.org/schema/context
                   http://www.springframework.org/schema/context/spring-context-3.0.xsd
                   http://www.springframework.org/schema/context
                   http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config />
    <context:component-scan base-package="ohtu.verkkokauppa" />

    <bean id="kirjanpitaja" class="ohtu.verkkokauppa.Kirjanpito">
    </bean>
    
    <bean id="sailytys" class="ohtu.verkkokauppa.Varasto">
        <constructor-arg ref="kirjanpitaja"/>
    </bean>
    <bean id="rahoituslaitos" class="ohtu.verkkokauppa.Pankki">
        <constructor-arg ref="kirjanpitaja"/>
    </bean>
    <bean id="generaattori" class="ohtu.verkkokauppa.Viitegeneraattori">
    </bean>
    <bean id="kauppa" class="ohtu.verkkokauppa.Kauppa">
        <constructor-arg ref="sailytys"/>
        <constructor-arg ref="rahoituslaitos"/>
        <constructor-arg ref="generaattori"/>
    </bean>

</beans>